{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "off",
        "no-tabs": 0,
        "react/jsx-filename-extension": "off",
        "function-paren-newline": ["error", "never"],
        "object-property-newline": ["error", {
            "allowAllPropertiesOnSameLine": true
        }]
    }
}